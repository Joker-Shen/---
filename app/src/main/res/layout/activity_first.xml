<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_first"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qianfeng.tea.HomeActivity">

    <!--主内容-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <android.support.design.widget.TabLayout
                android:id="@+id/tabmenu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tabSelectedTextColor="@android:color/holo_green_light"
                app:tabIndicatorColor="@android:color/holo_green_light"
                />
            <ImageView
                android:onClick="menu"
                android:layout_width="wrap_content"
                android:background="@android:color/white"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent"
                android:src="@mipmap/more"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_light"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/vpMain"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="24"/>
    </LinearLayout>

    <!--侧边栏-->
    <LinearLayout
        android:id="@+id/llMenu"
        android:clickable="true"
        android:layout_width="300dp"
        android:background="@android:color/white"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:background="@android:color/darker_gray"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            >
            <ImageView
                android:onClick="backHome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/searchbackbtn"
                android:scaleType="centerInside"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:text="茶百科"/>
            <ImageView
                android:onClick="backHome"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@mipmap/righttopbutton"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/holo_green_light"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/searchAnimation"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/myedit"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_alignParentLeft="true"
                    android:src="@mipmap/searchico"/>
                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:hint="认识"
                    />

            </RelativeLayout>
            <ImageView
                android:onClick="search"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:src="@mipmap/gosearch"
                android:padding="3dp"
                />

        </LinearLayout>
        <TextView
            android:onClick="hot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="热门搜索： 茶"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/guanyu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:layout_marginLeft="25dp"
                android:text="收藏夹"
                />
        </RelativeLayout>
        <TextView
            android:onClick="collection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="21dp"
            android:text="我的收藏"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="21dp"
            android:text="地图查询"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:src="@mipmap/guanyu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="20dp"
                android:layout_marginLeft="15dp"
                android:text="关于客户端"
                />
        </RelativeLayout>
        <TextView
            android:onClick="copyRight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="21dp"
            android:text="版权信息"/>
        <TextView
            android:onClick="opinion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="21dp"
            android:text="意见反馈"/>
        <ListView
            android:id="@+id/lvMenu"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="11"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>
